:root {
    --bg-color: rgba(0,0,0,.7);
    --text-color: #fff;
    --shine: #fff8de;
    --link-color: orange;
    --link-hover: var(--shine);
}

body {
    font-family: Urbanist;
    font-weight: 300;
    display: grid;
    grid-template-areas: "header" "main" "footer";
    grid-auto-rows: auto 1fr auto;
    background: var(--bg-color);
    color: var(--text-color);
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    /* position: fixed; */
    top: 0;
    background: url(/img/galaxy.jpeg);
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
}

header, footer {
    text-align: center;
    width: 100%;
    z-index: 2;
    clear: both;
}
header {
    background: var(--bg-color);
    box-shadow: inset 0 -1em 2em -1em var(--bg-color);
    backdrop-filter: blur(1px);
    padding-top: 15px;
    padding-bottom: 5px;
    grid-area: header;
}

nav section {
    margin-bottom: 5px;
    display: flex;
    gap: 1em;
    justify-content: center;
    font-weight: 400;
}

footer {
    padding-bottom: 15px;
    grid-area: footer;
}

main {
    {# background: url(https://images.pexels.com/photos/1252890/pexels-photo-1252890.jpeg);
    background-size: cover;
    background-position: center;
    background-attachment: fixed; #}
    margin: auto;
    grid-area: main;
    height: 100%;
    width: 100%;
    z-index: 1;
    overflow-y: scroll;
}
main article {
    max-width: 60ch;
    margin: -1em auto;
    background: var(--bg-color);
    box-shadow: 0 0 2em 4em var(--bg-color);
    backdrop-filter: blur(1px);
    z-index: 1;
    padding: 1em 2em 2em;
}

h1 {
    font-family: Big Shoulders;
    font-weight: normal;
    font-size: 48px;
}

article h1 {
    text-align: center;
    margin-bottom: .5em;
}
article p {
    margin-top: 0;
    text-align: left;
    font-size: 18px;
    color: var(--text-color);
    letter-spacing: 1px;
}
article p.em {
    font-style: italic;
}
article p.center {
    text-align: center;
}

article .description p {
    text-align: left;
}

h2 {
    font-family: Big Shoulders;
    margin-bottom: .2em;
    font-weight: normal;
    text-align: center;
}

header.top img {
    vertical-align: bottom;
    {# animation: shrink 4s ease; #}
    animation-iteration-count: 1;
    width: 125px;
}
a.watermark {
    animation: fade 8s linear;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 75px;
    max-width: 10%;
    opacity: 1;
    z-index: 4;
}
a.watermark img {
    width: 75px;
}
header img {
    width: 600px;
    max-width: 100%;
    vertical-align: bottom;
    animation: fade 3s ease;
    transition: .3s ease;
}
header img:hover, header.top img, a.watermark img:hover {
    filter: drop-shadow(0 0 .3em var(--shine));
    transition: .5s ease;
}
header h1 {
    margin: 0;
    font-family: Academy;
}

header h1 + h1 {
    transform: rotatex(180deg) translatey(35px);
    mask-image: linear-gradient(transparent, white);
    filter: blur(4px) brightness(1.5);
    line-height: 1.2em;
    margin-bottom: -1em;
    pointer-events: none;
}
/* header nav {
    margin-top: -3em;
} */
a {
    color: var(--link-color);
    transition: .4s ease;
}
a:visited {
    color: var(--link-color);
}
a:hover {
    color: var(--link-hover);
}
@keyframes shrink {
    from {
        width: 600px;
    }
    to {
        width: 125px;
    }
}
main {
    animation: fade 3s ease;
}
@keyframes fade {
    0% {
        opacity: 0;
    }
    15% {
        opacity: 0;
    }
    100% {
        opacity: 1;
    }
}
@media screen and (max-width: 1080px) {
    h1 {
        font-size: 32px;
    }
    img.watermark {
        display: none;
    }
    header.top img {
        float: left;
        animation: none;
        width: 75px;
        margin-bottom: 1em;
    }
    header.top {
        text-align: left;
    }
    header.top nav section {
        justify-content: left;
    }
    header.top h1 + h1 {
        display: none;
    }
}
@media (prefers-color-scheme:light) {
    :root {
        --text-color: black;
        --bg-color: rgba(255,255,255,.7);
        --shine: #3e4557;
        --link-color: #77c3ec;
    }
    body {
        background-image: url(/img/forest.jpeg);
    }
    header img, img.watermark {
        content: url({{'/img/black-logo.png' | url }});
    }
    header h1 + h1 {
        opacity: .7;
    }
    main {
        {# background-image: url(/img/forest.jpeg); #}
    }
    header nav, nav section {
        font-weight: 600;
    }

}

/* Store stuff */
a.button {
    background: var(--link-color);
    color: var(--bg-color);
    border-radius: .5em;
    padding: .5em;
    text-decoration: none;
    font-weight: 600;
}
a.button:hover {
    background: var(--link-hover);
    color: var(--bg-color);
    text-decoration: none;
}
img.product-image {
    width: 100%;
}
section.product-list {
    display: flex;
    gap: 1em;
    justify-content: center;
    margin: 0 auto 1em;
}
.product-list product {
    max-width: 50%;
    padding: 1em;
    box-shadow: 1px 1px 3px var(--shine);
    border-radius: .5em;
    text-align: center;
    justify-content: center;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
}
.product-list product a, .product-list product .price {
    display: block;
}
article > img.thumbnail, a.hover {
    float: left;
    width: 20ch;
    margin-right: 1ch;
    border-radius: 5px;
}
a.hover img.thumbnail {
    width: 100%;
}

h2 {
    clear: both;
    margin-top: 1em;
}
br {
    margin-bottom: .5em;
}
a.hover {
    transition: .3s ease;
    filter: sepia(0);
}
a.hover:hover {
    filter: sepia(1);
}