---
layout: base.njk
pagination:
  alias: product
  data: products
  size: 1
permalink: products/{{ product.permalink | slug }}/index.html

---

{% if product.image %}
<img class="product-image" src={{product.image.url}}>
{% else %}
<h1>{{ product.name }}</h1>
{% endif %}
<p><a target="_blank" class="button" href={{ product.checkout_url.checkout }}>Buy it now ({% if product.price.raw == 0 %}Free!{% else %}{{product.price.raw}} USD{% endif %})</a></p>
<div class="description">{{product.description | safe}}</div>
